<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.neu24.role.mapper.RoleMapper">

    <select id="selectSystemNodeById" resultType="java.lang.Integer">
        SELECT r.node_id
        FROM role_node_r r
        WHERE r.role_id = #{ roleId }
          AND NOT (r.node_id IN (SELECT DISTINCT pid
                                 FROM system_node
                                 WHERE pid IS NOT NULL))
    </select>

</mapper>
