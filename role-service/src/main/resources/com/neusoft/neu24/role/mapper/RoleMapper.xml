<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.neu24.role.mapper.RoleMapper">

    <select id="selectSystemNodeById" resultType="java.lang.Integer" parameterType="java.lang.Integer">
        SELECT rnr.node_id
        FROM role_node_r rnr
        WHERE rnr.role_id = #{ roleId }
          AND NOT (rnr.role_id IN (SELECT role_id
                                   FROM role
                                   WHERE state != 1))
          AND NOT (rnr.node_id IN (SELECT DISTINCT pid
                                   FROM system_node
                                   WHERE pid IS NOT NULL))
    </select>

    <!-- 删除角色的所有节点关联 -->
    <delete id="deleteRoleNodes">
        DELETE FROM role_node_r WHERE role_id = #{roleId}
    </delete>

    <insert id="insertRoleAuth">
        INSERT INTO role_node_r (role_id, node_id) values
        <foreach collection="nodeIds" item="nodeId" separator=",">
            ( #{roleId} , #{nodeId} )
        </foreach>
    </insert>

</mapper>
